---

<section class="relative py-24 bg-white overflow-hidden">
  <!-- Decoración superior -->
  <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-transparent via-[#D4AF37] to-transparent"></div>

  <div class="container mx-auto px-4 lg:px-8 relative z-10">
    <!-- Header principal -->
    <div class="text-center mb-20">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-[#D4AF37]/10 border border-[#D4AF37]/30 rounded-full mb-6">
        <div class="w-2 h-2 bg-[#D4AF37] rounded-full"></div>
        <span class="text-sm font-semibold text-[#D4AF37]">Servicios Detallados</span>
      </div>
      <h2 class="text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
        Soluciones
        <span class="bg-gradient-to-r from-[#D4AF37] to-[#B8941F] bg-clip-text text-transparent"> Gastronómicas</span>
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        Cada servicio diseñado con profesionalismo, calidad y atención al detalle
      </p>
    </div>

    <!-- Servicios Principales -->
    <div class="space-y-16 mb-24">
      {serviciosDetallados.map((servicio, index) => (
        <div class={`relative overflow-hidden rounded-3xl shadow-xl border border-gray-100 ${index % 2 === 0 ? 'bg-white' : 'bg-gradient-to-br from-[#F8F6F3] to-white'}`}>
          
          <!-- Contenedor con grid -->
          <div class="grid md:grid-cols-2 gap-0">
            
            <!-- Imágenes (alternadas según índice) -->
            <div class={`relative h-96 md:h-full overflow-hidden group ${index % 2 === 1 ? 'md:order-2' : ''}`}>
              <div class="grid grid-cols-2 gap-4 p-6 h-full">
                {servicio.images.map((img) => (
                  <div class="relative overflow-hidden rounded-2xl">
                    <div 
                      class="absolute inset-0 bg-cover bg-center transform group-hover:scale-110 transition-transform duration-500"
                      style={`background-image: url('${img}')`}
                    ></div>
                    <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
                  </div>
                ))}
              </div>
            </div>

            <!-- Contenido -->
            <div class={`p-10 flex flex-col justify-center ${index % 2 === 1 ? 'md:order-1' : ''}`}>
              <!-- Badge de número -->
              <div class="inline-flex items-center justify-center w-12 h-12 bg-gradient-to-br from-[#D4AF37] to-[#B8941F] rounded-full text-white font-bold mb-6 self-start">
                {servicio.id}
              </div>

              <h3 class="text-4xl font-bold text-gray-900 mb-4">
                {servicio.title}
              </h3>

              <p class="text-gray-700 text-lg leading-relaxed mb-6">
                {servicio.longDescription}
              </p>

              <!-- Features con checkmarks -->
              <div class="space-y-3 mb-8">
                {servicio.features.map((feature) => (
                  <div class="flex items-start gap-3">
                    <div class="w-6 h-6 bg-[#D4AF37] rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                      <svg width="14" height="14" fill="white" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24"><polyline points="20 6 9 17 4 12"/></svg>
                    </div>
                    <span class="text-gray-700 font-medium">{feature}</span>
                  </div>
                ))}
              </div>

              <!-- CTA Button -->
              <a href="/contacto" class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-[#D4AF37] to-[#B8941F] text-white rounded-xl font-semibold hover:shadow-lg hover:scale-105 transition-all duration-300 w-fit group/btn">
                <span>Solicitar Información</span>
                <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24" class="group-hover/btn:translate-x-1 transition-transform">
                  <polyline points="9 18 15 12 9 6"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Asesorías -->
    <div class="mb-20">
      <h3 class="text-4xl font-bold text-center text-gray-900 mb-16">
        Servicios de
        <span class="bg-gradient-to-r from-[#D4AF37] to-[#B8941F] bg-clip-text text-transparent"> Asesoría</span>
      </h3>

      <div class="grid md:grid-cols-3 gap-8">
        {asesorias.map((asesoria) => (
          <div class="group relative">
            <!-- Decorative background -->
            <div class="absolute -inset-4 bg-gradient-to-br from-[#D4AF37]/10 to-[#B8941F]/10 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 blur-xl"></div>

            <!-- Card -->
            <div class="relative bg-white rounded-3xl p-10 shadow-lg group-hover:shadow-2xl transition-all duration-500 border border-gray-100 h-full">
              <!-- Icon -->
              <div class="w-16 h-16 bg-gradient-to-br from-[#D4AF37]/20 to-[#B8941F]/20 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-500">
                <span class="text-[#D4AF37]" set:html={asesoria.icon}></span>
              </div>

              <!-- Content -->
              <h4 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-[#D4AF37] transition-colors">
                {asesoria.title}
              </h4>
              
              <p class="text-gray-700 leading-relaxed mb-6">
                {asesoria.description}
              </p>

              <!-- Features -->
              <ul class="space-y-2">
                {asesoria.features.map((feature) => (
                  <li class="flex items-center gap-2 text-sm text-gray-700">
                    <svg width="16" height="16" class="text-[#D4AF37]" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24"><polyline points="20 6 9 17 4 12"/></svg>
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>

              <!-- Decorative line -->
              <div class="w-12 h-1 bg-gradient-to-r from-[#D4AF37] to-transparent mt-6 group-hover:w-24 transition-all duration-500"></div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- CTA Final -->
    <div class="text-center pt-10">
      <div class="inline-flex flex-col items-center gap-6 bg-gradient-to-br from-[#D4AF37]/10 to-[#B8941F]/10 rounded-3xl p-12 border border-[#D4AF37]/30 max-w-2xl mx-auto">
        <h3 class="text-3xl font-bold text-gray-900">
          ¿Necesitas una solución personalizada?
        </h3>
        <p class="text-gray-700">Nuestro equipo está listo para diseñar el servicio perfecto para tu empresa</p>
        <a href="/contacto" class="px-10 py-4 bg-gradient-to-r from-[#D4AF37] to-[#B8941F] text-white rounded-full font-semibold hover:scale-105 hover:shadow-xl transition-all duration-300 flex items-center gap-2">
          Contáctanos Ahora
          <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24"><polyline points="9 18 15 12 9 6"/></svg>
        </a>
      </div>
    </div>
  </div>

  <!-- Decoración inferior -->
  <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-transparent via-[#D4AF37] to-transparent"></div>
</section>
