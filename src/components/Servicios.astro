    image: "/2.jpg",
  },
  {
    icon: `<svg class='w-6 h-6 text-white' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round' viewBox='0 0 24 24'><path d='M9 9v6h6V9H9z'/><rect x='3' y='3' width='18' height='18' rx='2'/></svg>`,
