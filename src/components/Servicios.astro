---
<section id="servicios" class="py-20 lg:py-32 bg-white">
  <div class="container mx-auto px-4 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl lg:text-5xl font-serif font-bold text-charcoal mb-4">
        Nuestros <span class="text-primary">Servicios</span>
      </h2>
      <div class="w-20 h-1 bg-primary mx-auto mb-6"></div>
      <p class="text-xl text-gray-dark max-w-3xl mx-auto">
        Soluciones gastronómicas integrales para empresas, instituciones educativas y eventos
      </p>
    </div>
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
      {services.map((service, index) => {
        return (
          <div class="group relative overflow-hidden rounded-xl shadow-md hover:shadow-2xl transition-smooth hover:-translate-y-2 bg-white" style={`animation-delay: ${index * 100}ms`}>
            <!-- Image Background -->
            <div class="relative h-48 overflow-hidden">
              <div class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-110" style={`background-image: url('${service.image}')`}></div>
              <div class="absolute inset-0 bg-gradient-to-t from-charcoal via-charcoal/50 to-transparent"></div>
            </div>
            <!-- Content -->
            <div class="p-6 relative">
              <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-smooth">
                <span set:html={service.icon}></span>
              </div>
              <h3 class="text-xl font-bold text-charcoal mb-2 group-hover:text-primary transition-smooth">{service.title}</h3>
              <p class="text-gray-dark text-sm leading-relaxed">{service.description}</p>
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>
