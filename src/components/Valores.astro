---
const values = [
  {
    icon: `<svg class='w-8 h-8' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round' viewBox='0 0 24 24'><path d='M20.8 4.6a5.5 5.5 0 0 0-7.8 0l-.5.5-.5-.5a5.5 5.5 0 0 0-7.8 7.8l8.3 8.3 8.3-8.3a5.5 5.5 0 0 0 0-7.8z'/></svg>`,
    title: "Respeto y Empatía",
    description: "Valoramos a cada persona y sus necesidades individuales, creando espacios inclusivos donde todos somos escuchados.",
  },
  {
    icon: `<svg class='w-8 h-8' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round' viewBox='0 0 24 24'><path d='M17 21v-2a4 4 0 0 0-8 0v2'/><circle cx='12' cy='7' r='4'/><path d='M22 21v-2a4 4 0 0 0-3-3.87'/><path d='M6 17.13A4 4 0 0 0 3 21v2'/></svg>`,
    title: "Compañerismo y Trabajo en Equipo",
    description: "Juntos logramos resultados extraordinarios, fortaleciendo nuestras capacidades colectivas.",
  },
  {
    icon: `<svg class='w-8 h-8' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round' viewBox='0 0 24 24'><circle cx='12' cy='8' r='7'/><polyline points='8.21 13.89 7.25 21 12 17.77 16.75 21 15.79 13.88'/></svg>`,
    title: "Compromiso con la Calidad",
    description: "Excelencia en cada plato que servimos, manteniendo los más altos estándares.",
  },
  {
    icon: `<svg class='w-8 h-8' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round' viewBox='0 0 24 24'><path d='M12 2v2'/><path d='M12 22v-2'/><path d='M4.93 4.93l1.41 1.41'/><path d='M17.66 17.66l-1.41-1.41'/><path d='M2 12h2'/><path d='M22 12h-2'/><path d='M4.93 19.07l1.41-1.41'/><path d='M17.66 6.34l-1.41 1.41'/><circle cx='12' cy='12' r='7'/></svg>`,
    title: "Sostenibilidad",
    description: "Conciencia ambiental y social, responsables con nuestro entorno y comunidad.",
  },
  {
    icon: `<svg class='w-8 h-8' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round' viewBox='0 0 24 24'><path d='M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z'/></svg>`,
    title: "Innovación y Mejora Continua",
    description: "Siempre buscando nuevas formas de mejorar, adaptándonos a los cambios del mercado.",
  },
  {
    icon: `<svg class='w-8 h-8' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round' viewBox='0 0 24 24'><path d='M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z'/></svg>`,
    title: "Integridad y Honestidad",
    description: "Actuamos con transparencia y ética en todas nuestras decisiones y relaciones.",
  },
];
---
<section id="valores" class="relative py-24 bg-gradient-to-br from-white via-[#F8F6F3] to-white overflow-hidden">
  <!-- Decoración superior -->
  <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-transparent via-[#D4AF37] to-transparent"></div>

  <!-- Patrón decorativo de fondo -->
  <div class="absolute inset-0 opacity-[0.02]">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, #D4AF37 1px, transparent 0); background-size: 30px 30px;"></div>
  </div>

  <div class="container mx-auto px-4 lg:px-8 relative z-10">
    <!-- Header -->
    <div class="text-center mb-20">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-[#D4AF37]/10 border border-[#D4AF37]/30 rounded-full mb-6">
        <div class="w-2 h-2 bg-[#D4AF37] rounded-full"></div>
        <span class="text-sm font-semibold text-[#D4AF37]">Lo que nos define</span>
      </div>
      <h2 class="text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
        Nuestros
        <span class="bg-gradient-to-r from-[#D4AF37] to-[#B8941F] bg-clip-text text-transparent"> Valores</span>
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        Principios que guían nuestro actuar diario, basados en la ética, honestidad, respeto, responsabilidad y compromiso con las buenas prácticas.
      </p>
    </div>

    <!-- Values Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-20">
      {values.map((value) => (
        <div class="group relative">
          <!-- Decorative background -->
          <div class="absolute -inset-4 bg-gradient-to-br from-[#D4AF37]/10 to-[#B8941F]/10 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 blur-xl"></div>

          <!-- Card -->
          <div class="relative bg-white rounded-3xl p-8 shadow-lg group-hover:shadow-2xl transition-all duration-500 border border-gray-100 h-full">
            <!-- Icon -->
            <div class="w-16 h-16 bg-gradient-to-br from-[#D4AF37]/20 to-[#B8941F]/20 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 group-hover:rotate-6 transition-all duration-500">
              <span class="text-[#D4AF37]" set:html={value.icon}></span>
            </div>

            <!-- Content -->
            <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-[#D4AF37] transition-colors">
              {value.title}
            </h3>
            <p class="text-gray-700 leading-relaxed">
              {value.description}
            </p>

            <!-- Decorative line -->
            <div class="w-12 h-1 bg-gradient-to-r from-[#D4AF37] to-transparent mt-6 group-hover:w-16 transition-all duration-500"></div>
          </div>
        </div>
      ))}
    </div>

    <!-- Decoración -->
    <div class="flex justify-center">
      <div class="flex items-center gap-4">
        <div class="w-20 h-1 bg-gradient-to-r from-transparent to-[#D4AF37]"></div>
        <div class="w-3 h-3 rounded-full bg-[#D4AF37]"></div>
        <div class="w-3 h-3 rounded-full bg-[#B8941F]"></div>
        <div class="w-3 h-3 rounded-full bg-[#F4A261]"></div>
        <div class="w-20 h-1 bg-gradient-to-l from-transparent to-[#D4AF37]"></div>
      </div>
    </div>
  </div>

  <!-- Decoración inferior -->
  <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-transparent via-[#D4AF37] to-transparent"></div>
</section>
